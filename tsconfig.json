{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "express"],
    "lib": ["es2017", "esnext", "dom"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  
  
}
